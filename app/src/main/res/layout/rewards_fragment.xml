<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--rewards membership card-->
    <!--<android.support.v7.widget.CardView>-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle_frame"
                >
                <TextView
                    android:id="@+id/member_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/member_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/member_name"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/rewards_number_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/member_duration"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/rewards_number_barcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/rewards_number_label"
                    android:textSize="36sp"/>
                <TextView
                    android:id="@+id/rewards_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/rewards_number_barcode"
                    android:textSize="20sp"/>
            </RelativeLayout>
        </RelativeLayout>

    </FrameLayout>
    <!--</android.support.v7.widget.CardView>-->

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@android:id/tabhost">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--rewards list tab-->
                <LinearLayout
                    android:id="@+id/tab1_rewards"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="6dp"
                    android:orientation="horizontal">
                    <include layout="@layout/rewards_list"/>
                </LinearLayout>

                <!--ink recycling tab-->
                <ScrollView
                    android:id="@+id/tab2_ink_recycling"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="6dp"
                    android:background="@color/background_white">
                    <include layout="@layout/rewards_ink_recycling"/>
                </ScrollView>

                <!--summary tab-->
                <ScrollView
                    android:id="@+id/tab3_summary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="6dp"
                    android:background="@color/background_white">
                    <include layout="@layout/rewards_summary"/>
                </ScrollView>

            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>
