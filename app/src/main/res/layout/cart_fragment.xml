<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cart_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--free shipping message-->
    <TextView
        android:id="@+id/free_shipping_msg"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:textColor="@color/text_white"
        android:textSize="14sp"
        />

    <!--empty cart message-->
    <TextView
        android:id="@+id/empty_cart_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="40dp"
        android:textSize="20dp"
        android:background="@color/background_white"
        android:text="@string/empty_cart_msg"
        android:visibility="gone"
        />

    <!--cart listview (using cards and no divider, smoothScrollbar="false" because items vary in height)-->
    <!--todo: experiment with setting scrollingCache and animationCache to false for performance-->
    <!--todo: experiment with smoothScrollbar on device-->
    <ListView
        android:id="@+id/cart_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:smoothScrollbar="false"
        android:divider="#ffffffff"
        android:background="@color/background_white"/>

    <!--coupon & rewards heading -->
    <RelativeLayout
        android:id="@+id/coupons_rewards_layout"
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/background_extra_light_gray">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/coupons_rewards"
            android:textSize="18sp"
            android:textColor="@color/text_blue"
            />
        <TextView
            android:id="@+id/coupons_rewards_value"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            android:textColor="@color/text_blue"
            />
    </RelativeLayout>
    <!-- listview for coupons -->
    <ListView
        android:id="@+id/coupon_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:divider="#ffffffff"
        android:background="@color/background_white"
        android:visibility="gone"/>

    <!--link rewards account -->
    <include layout="@layout/rewards_linking"
        android:id="@+id/link_rewards_acct_layout"
        android:padding="16dp"
        android:visibility="gone"/>


    <!--shipping info -->
    <RelativeLayout
        android:id="@+id/cart_shipping_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/background_light_gray">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/shipping"
            android:paddingTop="2dp"
            android:paddingBottom="0dp"
            android:textSize="18sp"
            android:textColor="@color/text_black"
        />
        <TextView
            android:id="@+id/cart_shipping"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="2dp"
            android:paddingBottom="0dp"
            android:textSize="18sp"
            android:textColor="@color/text_black"
            />
    </RelativeLayout>

    <!--pre-tax subtotal and checkout button -->
    <RelativeLayout
        android:id="@+id/cart_subtotal_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:background="@color/background_light_gray">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingTop="0dp"
            android:paddingBottom="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:text="@string/pretax_subtotal" />
        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/cart_subtotal"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="0dp"
            android:paddingBottom="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            />

        <!--checkout button-->
        <TextView
            android:id="@+id/action_checkout"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_below="@id/cart_subtotal"
            android:gravity="center"
            android:text="@string/proceed_to_checkout"
            android:textSize="20sp"
            android:textColor="@color/text_white"
            android:background="@color/background_red_submission"/>

    </RelativeLayout>

</LinearLayout>
