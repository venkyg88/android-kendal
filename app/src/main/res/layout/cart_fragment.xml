<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cart_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--free shipping message-->
    <TextView
        android:id="@+id/free_shipping_msg"
        android:layout_width="match_parent"
        style="@style/CartHeader"
        android:textColor="@color/text_white"
        />

    <!--empty cart message-->
    <TextView
        android:id="@+id/empty_cart_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="40dp"
        android:textSize="20dp"
        android:background="@color/background_white"
        android:text="@string/empty_cart_msg"
        android:visibility="gone"
        />

    <!--cart listview (using cards and no divider)-->
    <ListView
        android:id="@+id/cart_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:divider="#ffffffff"
        android:background="@color/background_white"/>

    <!--coupon & rewards heading -->
    <RelativeLayout
        android:id="@+id/coupons_rewards_layout"
        style="@style/DrawerStyle"
        android:layout_width="match_parent"
        android:background="@color/background_extra_light_gray">
        <TextView
            style="@style/DrawerStyle"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/coupons_rewards"
            android:textColor="@color/text_blue"
            />
        <TextView
            android:id="@+id/coupons_rewards_value"
            style="@style/DrawerStyle"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_blue"
            />
    </RelativeLayout>
    <!-- listview for coupons -->
    <ListView
        android:id="@+id/coupon_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background_extra_light_gray"
        android:visibility="gone"/>

    <!--link rewards account -->
    <include layout="@layout/rewards_linking"
        android:id="@+id/link_rewards_acct_layout"
        android:visibility="gone"/>


    <!--shipping info-->
    <RelativeLayout
        android:id="@+id/cart_shipping_layout"
        style="@style/DrawerStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_light_gray">
        <TextView
            style="@style/DrawerStyle"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/shipping"
            android:paddingTop="2dp"
            android:paddingBottom="0dp"
            />
        <TextView
            android:id="@+id/cart_shipping"
            style="@style/DrawerStyle"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="2dp"
            android:paddingBottom="0dp"
            />
    </RelativeLayout>

    <!--subtotal-->
    <RelativeLayout
        android:id="@+id/cart_subtotal_layout"
        style="@style/DrawerStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_light_gray">
        <TextView
            style="@style/DrawerStyle"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingTop="0dp"
            android:paddingBottom="2dp"
            android:text="@string/pretax_subtotal" />
        <TextView
            android:id="@+id/cart_subtotal"
            style="@style/DrawerStyle"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="0dp"
            android:paddingBottom="2dp"
            />
    </RelativeLayout>

    <!--checkout button-->
    <TextView
        android:id="@+id/action_checkout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="@string/proceed_to_checkout"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="24dp"
        android:textColor="@color/text_white"
        android:background="@color/background_red_submission"/>


</LinearLayout>
