<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_off_white"
    android:orientation="vertical">

    <!--free shipping message-->
    <TextView
        android:id="@+id/free_shipping_msg"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:textColor="@color/text_white"
        android:textSize="14sp"
        />

    <!--empty cart message-->
    <TextView
        android:id="@+id/empty_cart_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="40dp"
        android:textSize="20dp"
        android:text="@string/empty_cart_msg"
        android:visibility="gone"
        />

    <!--cart list (using cards and no divider)-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/cart_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:background="@color/background_off_white"
        />

    <!--coupon & rewards heading -->
    <android.support.v7.widget.CardView
        android:id="@+id/coupons_rewards_layout"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        card_view:contentPaddingLeft="16dp"
        card_view:contentPaddingRight="16dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="1dp"
        card_view:cardBackgroundColor="@color/background_extra_light_gray">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="@string/coupons_rewards"
            android:textSize="14sp"
            android:textColor="@color/text_blue"
            />
        <TextView
            android:id="@+id/coupons_rewards_value"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:textSize="14sp"
            android:textColor="@color/text_blue"
            />
    </android.support.v7.widget.CardView>
    <!-- RecyclerView for coupons -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/coupon_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:scrollbars="vertical"
        android:visibility="gone"/>

    <!--link rewards account -->
    <include layout="@layout/rewards_linking"
        android:id="@+id/link_rewards_acct_layout"
        android:padding="16dp"
        android:visibility="gone"/>


    <!--shipping info -->
    <RelativeLayout
        android:id="@+id/cart_shipping_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/background_off_white">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/shipping"
            android:paddingBottom="0dp"
            android:textSize="14sp"
            android:textColor="@color/text_nearly_black"
        />
        <TextView
            android:id="@+id/cart_shipping"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="0dp"
            android:textSize="14sp"
            android:textColor="@color/text_nearly_black"
            />
    </RelativeLayout>

    <!--pre-tax subtotal and checkout button -->
    <RelativeLayout
        android:id="@+id/cart_subtotal_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/background_off_white">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:text="@string/pretax_subtotal" />
        <TextView
            android:id="@+id/cart_subtotal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            />

        <!--checkout button-->
        <android.support.v7.widget.CardView
            android:id="@+id/action_checkout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@id/cart_subtotal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:padding="0dp"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="0dp"
            card_view:cardBackgroundColor="@color/background_red_submission" >

            <TextView
                android:id="@+id/action_checkout_text"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_below="@id/cart_subtotal"
                android:gravity="center"
                android:text="@string/proceed_to_checkout"
                android:textSize="14sp"
                android:textColor="@color/text_white"
            />

        </android.support.v7.widget.CardView>


    </RelativeLayout>

</LinearLayout>
