<?xml version="1.0" encoding="utf-8"?>
<com.staples.mobile.cfa.widget.DataWrapper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/staples_off_white">

    <!-- Summary page contents -->
    <ScrollView
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbarStyle="outsideOverlay"
        android:background="@color/staples_off_white"
        android:paddingLeft="@dimen/sku_padding_10"
        android:paddingRight="@dimen/sku_padding_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SKU Photos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/staples_white"
                android:orientation="vertical">
                <android.support.v4.view.ViewPager
                    android:id="@+id/images"
                    android:layout_width="@dimen/sku_image_width"
                    android:layout_height="@dimen/sku_image_height"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/sku_padding_10"
                    android:paddingBottom="@dimen/sku_padding_10"
                    android:background="@color/staples_white"/>
                <com.staples.mobile.cfa.widget.PagerStripe
                    android:id="@+id/stripe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontsize_12sp"
                    android:padding="@dimen/right_margin"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="right|center_vertical"
                    stripeThickness="2dp"/>
            </LinearLayout>

            <!-- Sku Info Sum -->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:textSize="@dimen/fontsize_18sp"
                android:textColor="@color/staples_black"
                android:paddingTop="@dimen/sku_padding_10"
                android:paddingLeft="@dimen/sku_padding_10"
                android:paddingRight="@dimen/sku_padding_10"
                android:ellipsize="end"
                android:maxLines="3"/>

            <!-- Sku Price/Rating -->
            <LinearLayout
                android:id="@+id/price_rating_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/sku_padding_10">
                <com.staples.mobile.cfa.widget.PriceSticker
                    android:id="@+id/pricing"
                    style="@style/LargePriceSticker"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <com.staples.mobile.cfa.widget.RatingStars
                    android:id="@+id/rating"
                    style="@style/SmallRatingStars"/>
            </LinearLayout>

            <!-- Sku Rebate -->
            <TextView
                android:id="@+id/rebate_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/action_bar_quarter_margin"
                android:textSize="@dimen/fontsize_10sp"
                android:text="@string/rebate_text"
                android:textColor="@color/staples_dark_gray"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/rebate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sku_padding_10"
                android:paddingTop="@dimen/action_bar_quarter_margin"
                android:paddingLeft="@dimen/left_margin"
                android:paddingRight="@dimen/right_margin"
                android:paddingBottom="@dimen/action_bar_quarter_margin"
                android:textColor="@color/staples_white"
                android:background="@drawable/rounded_corner_red"
                android:visibility="gone"/>

            <!-- Shipping Logic Info -->
            <TextView
                android:id="@+id/overweight_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fontsize_16sp"
                android:gravity="center_vertical|left"
                android:text="@string/overweight_warning"
                android:paddingLeft="@dimen/sku_padding_5"
                android:paddingTop="@dimen/sku_padding_2"
                android:paddingBottom="@dimen/sku_padding_2"/>

            <LinearLayout
                android:id="@+id/add_on_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/elevation_high"
                    android:paddingRight="@dimen/elevation_high"
                    android:paddingTop="@dimen/sku_padding_2"
                    android:paddingBottom="@dimen/sku_padding_2"
                    android:gravity="left"
                    android:textSize="@dimen/fontsize_16sp"
                    android:text="@string/add_on"
                    android:textColor="@color/staples_white"
                    android:background="@drawable/rounded_corner_green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontsize_16sp"
                    android:gravity="center_vertical|left"
                    android:text="@string/add_on_warming"
                    android:paddingLeft="@dimen/sku_padding_5"
                    android:paddingTop="@dimen/sku_padding_2"
                    android:paddingBottom="@dimen/sku_padding_2"/>
            </LinearLayout>

            <!-- Description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sku_round_layout"
                android:orientation="vertical">
                <TextView
                    style="@style/SkuSummaryHeader"
                    android:text="@string/description"/>
                <TextView
                    android:id="@+id/model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingTop="@dimen/verticalspacing_8dp"
                    android:paddingBottom="@dimen/verticalspacing_8dp"
                    android:paddingLeft="@dimen/sku_padding_10"
                    android:paddingRight="@dimen/sku_padding_10"
                    android:textSize="@dimen/fontsize_12sp"
                    android:textColor="@color/staples_dark_gray"
                    android:background="@drawable/sku_divider"/>
                <LinearLayout
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/sku_padding_10"
                    android:orientation="vertical"/>
                <TextView
                    android:id="@+id/description_detail"
                    style="@style/SkuDetailHeader"
                    android:text="@string/description_detail"
                    android:background="@drawable/sku_divider"/>
            </LinearLayout>

            <!-- Specifications -->
            <LinearLayout
                android:id="@+id/specifications_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/sku_padding_10"
                android:background="@drawable/sku_round_layout">
                <TextView
                    style="@style/SkuSummaryHeader"
                    android:text="@string/specifications"/>
                <FrameLayout
                    android:id="@+id/specifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/specifications_detail"
                    style="@style/SkuDetailHeader"
                    android:text="@string/specifications_detail"
                    android:layout_gravity="bottom"/>
            </LinearLayout>

            <!-- Customer reviews -->
            <LinearLayout
                android:id="@+id/reviews_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/sku_padding_10"
                android:padding="@dimen/sku_border_width"
                android:background="@drawable/sku_round_layout">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/SkuSummaryHeader"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/reviews"/>
                    <com.staples.mobile.cfa.widget.RatingStars
                        android:id="@+id/review_rating"
                        style="@style/SmallRatingStars"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="@dimen/sku_padding_10"/>
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sku_divider"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/reviews_detail"
                    style="@style/SkuDetailHeader"
                    android:text="@string/reviews_detail"
                    android:background="@drawable/sku_divider"
                    android:visibility="gone"/>
            </LinearLayout>

            <!-- Accessory List -->
            <LinearLayout
                android:id="@+id/accessory_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/sku_padding_10"
                android:padding="@dimen/sku_border_width"
                android:background="@drawable/sku_round_layout">
                <TextView
                    android:id="@+id/accessory_title"
                    style="@style/SkuSummaryHeader"
                    android:text="@string/accessories"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/sku_padding_2"
                    android:background="@drawable/sku_divider">
                    <LinearLayout
                        android:id="@+id/accessory_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Summary page progress whirly -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Summary page nothing found -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/fontsize_20sp"
        android:text="@string/empty"/>

    <!-- SKU Detail page -->
    <TabHost
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </TabHost>

    <!-- Add to cart footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/select_sku"
            android:textSize="@dimen/fontsize_16sp"
            android:text="@string/sku_set_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="onClick"
            android:clickable="true"
            android:textColor="@color/staples_green"
            android:visibility="gone"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/staples_middle_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sku_add_cart_height"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/sku_padding_10"
            android:paddingRight="@dimen/sku_padding_10">
            <com.staples.mobile.cfa.widget.QuantityEditor
                android:id="@+id/quantity"
                style="@style/QtyEditorStyle"
                android:layout_width="@dimen/sku_add_cart_editor_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:paddingLeft="@dimen/sku_padding_10"
                app:maxQuantity="10"
                app:popupWidth="120dp"/>
            <Button
                android:id="@+id/add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:textSize="@dimen/fontsize_18sp"
                android:text="@string/add_to_cart"
                android:background="@drawable/sku_add_cart_round_layout"
                android:textColor="@color/staples_white"
                android:layout_margin="@dimen/sku_padding_5"/>
            <TextView
                android:id="@+id/footer_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/staples_black"
                android:textSize="@dimen/fontsize_16sp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</com.staples.mobile.cfa.widget.DataWrapper>
