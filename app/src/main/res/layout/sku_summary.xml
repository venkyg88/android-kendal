<?xml version="1.0" encoding="utf-8"?>
<com.staples.mobile.cfa.widget.DataWrapper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- Summary page contents -->
    <ScrollView
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbarStyle="outsideOverlay"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <!-- Photos -->
            <android.support.v4.view.ViewPager
                android:id="@+id/images"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>
            <com.staples.mobile.cfa.widget.PagerStripe
                android:id="@+id/stripe"
                style="@style/PagerStripe"/>

            <!-- Info -->
            <TextView
                android:id="@+id/title"
                style="@style/SkuSummaryTitle"/>
            <TextView
                android:id="@+id/numbers"
                style="@style/SkuNumbers"/>
            <com.staples.mobile.cfa.widget.RatingStars
                android:id="@+id/rating"
                style="@style/LargeRatingStars"/>
            <com.staples.mobile.cfa.widget.PriceSticker
                android:id="@+id/pricing"
                style="@style/LargePriceSticker"/>

            <!-- Description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/SkuSummaryHeader"
                        android:text="@string/description"
                        android:paddingTop="10dp"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/description_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/more_arrow"/>
            </LinearLayout>

            <!-- Specifications -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/specifications"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/SkuSummaryHeader"
                        android:text="@string/specifications"
                        android:paddingTop="10dp"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/specification_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/more_arrow"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="34dp"/>
            </LinearLayout>

            <!-- Customer reviews -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/reviews"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/SkuSummaryHeader"
                        android:text="@string/reviews"
                        android:paddingTop="10dp"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/review_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/more_arrow"/>
            </LinearLayout>

            <!-- Accessory List -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <TextView
                    android:id="@+id/accessory_title"
                    style="@style/SkuSummaryHeader"
                    android:text="@string/accessories"/>
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/accessoryContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Summary page progress whirly -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Summary page nothing found -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/empty"/>

    <!-- Detail page -->
    <TabHost
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </TabHost>

    <!-- Add to cart footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <com.staples.mobile.cfa.widget.QuantityEditor
            android:id="@+id/quantity"
            style="@style/QtyEditorStyle"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:hint="1"
            android:maxLength="4"
            app:maxQuantity="10"
            app:popupWidth="120dp"/>
        <Button
            android:id="@+id/add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:textSize="20sp"
            android:text="@string/add_to_cart"/>
        <TextView
            android:id="@+id/footer_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_nearly_black"
            android:textSize="16sp"
            android:visibility="gone"
        />
    </LinearLayout>
</com.staples.mobile.cfa.widget.DataWrapper>
