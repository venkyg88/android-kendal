<?xml version="1.0" encoding="utf-8"?>
<com.staples.mobile.cfa.widget.DataWrapper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/staples_off_white">

    <!-- Summary page contents -->
    <ScrollView
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbarStyle="outsideOverlay"
        android:background="@color/staples_off_white"
        android:padding="@dimen/sku_padding_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SKU Photos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/staples_white"
                android:orientation="vertical">
                <android.support.v4.view.ViewPager
                    android:id="@+id/images"
                    android:layout_width="@dimen/sku_image_width"
                    android:layout_height="@dimen/sku_image_height"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/sku_padding_10"
                    android:paddingBottom="@dimen/sku_padding_10"
                    android:background="@color/staples_white"/>
                <com.staples.mobile.cfa.widget.PagerStripe
                    android:id="@+id/stripe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontsize_12sp"
                    android:padding="@dimen/right_margin"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="right|center_vertical"
                    stripeThickness="2dp"/>
            </LinearLayout>

            <!-- Sku Info Sum -->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:textSize="@dimen/fontsize_18sp"
                android:textColor="@color/staples_black"
                android:paddingTop="@dimen/sku_padding_10"
                android:paddingLeft="@dimen/sku_padding_10"
                android:paddingRight="@dimen/sku_padding_10"
                android:ellipsize="end"
                android:maxLines="3"/>

            <!-- Sku Price/Rating -->
            <LinearLayout
                android:id="@+id/price_rating_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/sku_padding_10"
                android:paddingLeft="@dimen/sku_padding_10"
                android:paddingRight="@dimen/sku_padding_10">
                <com.staples.mobile.cfa.widget.PriceSticker
                    android:id="@+id/pricing"
                    style="@style/LargePriceSticker"
                    android:layout_gravity="center_vertical|left"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"/>
                <com.staples.mobile.cfa.widget.RatingStars
                    android:id="@+id/rating"
                    style="@style/SmallRatingStars"
                    android:layout_gravity="center_vertical|right"/>
            </LinearLayout>

            <!-- Sku Rebate -->
            <LinearLayout
                android:id="@+id/rebate_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/sku_padding_10"
                android:paddingRight="@dimen/sku_padding_10"
                android:paddingTop="@dimen/sku_padding_10"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontsize_12sp"
                    android:textColor="@color/staples_dark_gray"
                    android:gravity="top|left"
                    android:layout_gravity="top|left"
                    android:text="@string/rebate_hint"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"/>
                <Button
                    android:id="@+id/rebate_button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sku_rebate_height"
                    android:textSize="@dimen/fontsize_16sp"
                    android:text="@string/rebate"
                    android:background="@drawable/sku_add_cart_round_layout"
                    android:textColor="@color/staples_white"
                    android:layout_margin="@dimen/sku_padding_5"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|right"
                    android:paddingLeft="@dimen/sku_padding_10"
                    android:paddingRight="@dimen/sku_padding_10"/>
            </LinearLayout>

            <!-- Shipping Logic Info -->
            <LinearLayout
                android:id="@+id/shipping_logic_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/sku_padding_10"
                android:paddingLeft="@dimen/sku_padding_10"
                android:visibility="gone">
                <LinearLayout
                    android:id="@+id/overweight_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/staples_green">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/elevation_high"
                            android:paddingRight="@dimen/elevation_high"
                            android:paddingTop="@dimen/sku_padding_2"
                            android:paddingBottom="@dimen/sku_padding_2"
                            android:gravity="left"
                            android:textSize="@dimen/fontsize_16sp"
                            android:text="@string/overweight"
                            android:textColor="@color/staples_white"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontsize_16sp"
                        android:gravity="center_vertical|left"
                        android:text="@string/overweight_warming"
                        android:paddingLeft="@dimen/sku_padding_5"
                        android:paddingTop="@dimen/sku_padding_2"
                        android:paddingBottom="@dimen/sku_padding_2"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_on_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/staples_green">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/elevation_high"
                            android:paddingRight="@dimen/elevation_high"
                            android:paddingTop="@dimen/sku_padding_2"
                            android:paddingBottom="@dimen/sku_padding_2"
                            android:gravity="left"
                            android:textSize="@dimen/fontsize_16sp"
                            android:text="@string/add_on"
                            android:textColor="@color/staples_white"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontsize_16sp"
                        android:gravity="center_vertical|left"
                        android:text="@string/add_on_warming"
                        android:paddingLeft="@dimen/sku_padding_5"
                        android:paddingTop="@dimen/sku_padding_2"
                        android:paddingBottom="@dimen/sku_padding_2"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sku_round_layout"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/SkuSummaryHeader"
                        android:text="@string/description"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/staples_middle_gray"/>
                <TextView
                    android:id="@+id/model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingTop="@dimen/verticalspacing_8dp"
                    android:paddingBottom="@dimen/verticalspacing_8dp"
                    android:paddingLeft="@dimen/sku_padding_10"
                    android:paddingRight="@dimen/sku_padding_10"
                    android:textSize="@dimen/fontsize_12sp"
                    android:textColor="@color/staples_dark_gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/description_detail"
                    style="@style/SkuDetailHeader"
                    android:text="@string/description_detail"/>
            </LinearLayout>

            <!-- Specifications -->
            <LinearLayout
                android:id="@+id/specifications_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sku_padding_10"
                    android:background="@color/staples_off_white"/>
                <LinearLayout
                    android:id="@+id/specifications_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/sku_round_layout">
                    <LinearLayout
                        android:id="@+id/specifications"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            style="@style/SkuSummaryHeader"
                            android:text="@string/specifications"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/staples_middle_gray"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/specifications_detail"
                        style="@style/SkuDetailHeader"
                        android:text="@string/specifications_detail"
                        android:layout_gravity="bottom"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Customer reviews -->
            <LinearLayout
                android:id="@+id/reviews_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sku_padding_10"
                    android:background="@color/staples_off_white"/>
                <LinearLayout
                    android:id="@+id/reviews_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/sku_round_layout">
                    <LinearLayout
                        android:id="@+id/reviews"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                style="@style/SkuSummaryHeader"
                                android:text="@string/reviews"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"/>
                            <com.staples.mobile.cfa.widget.RatingStars
                                android:id="@+id/review_rating"
                                style="@style/SmallRatingStars"
                                android:layout_gravity="left|center_vertical"
                                android:gravity="left|center_vertical"
                                android:paddingRight="@dimen/sku_padding_10"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/staples_middle_gray"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/reviews_detail"
                        style="@style/SkuDetailHeader"
                        android:text="@string/reviews_detail"
                        android:layout_gravity="bottom"/>
                    </LinearLayout>
            </LinearLayout>

            <!-- Accessory List -->
            <LinearLayout
                android:id="@+id/accessory_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sku_padding_10"
                    android:background="@color/staples_off_white"/>
                <LinearLayout
                    android:id="@+id/accessory_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/sku_round_layout">
                    <TextView
                        android:id="@+id/accessory_title"
                        style="@style/SkuSummaryHeader"
                        android:text="@string/accessories"/>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/staples_middle_gray"/>
                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/sku_padding_2">
                        <LinearLayout
                            android:id="@+id/accessoryContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Summary page progress whirly -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Summary page nothing found -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/fontsize_20sp"
        android:text="@string/empty"/>

    <!-- SKU Detail page -->
    <TabHost
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </TabHost>

    <!-- Add to cart footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/select_sku"
            android:textSize="@dimen/fontsize_16sp"
            android:text="@string/sku_set_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="onClick"
            android:clickable="true"
            android:textColor="@color/staples_green"
            android:visibility="gone"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/staples_middle_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sku_add_cart_height"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/sku_padding_10"
            android:paddingRight="@dimen/sku_padding_10">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/sku_padding_10"
                android:paddingRight="@dimen/sku_padding_10"
                android:layout_gravity="center">
                <com.staples.mobile.cfa.widget.QuantityEditor
                    android:id="@+id/quantity"
                    style="@style/QtyEditorStyle"
                    android:layout_width="@dimen/sku_add_cart_editor_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:hint="1"
                    android:maxLength="4"
                    android:drawableRight="@drawable/ic_arrow_drop_down"
                    app:maxQuantity="10"
                    app:popupWidth="120dp"
                    android:paddingLeft="@dimen/sku_padding_10"/>
                <View
                    android:layout_width="@dimen/sku_add_cart_editor_width"
                    android:layout_height="1dp"
                    android:background="@color/staples_dark_gray"
                    android:paddingTop="@dimen/sku_padding_5"/>
            </LinearLayout>
            <Button
                android:id="@+id/add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:textSize="@dimen/fontsize_18sp"
                android:text="@string/add_to_cart"
                android:background="@drawable/sku_add_cart_round_layout"
                android:textColor="@color/staples_white"
                android:layout_margin="@dimen/sku_padding_5"/>
            <TextView
                android:id="@+id/footer_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/staples_black"
                android:textSize="@dimen/fontsize_16sp"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>
</com.staples.mobile.cfa.widget.DataWrapper>
