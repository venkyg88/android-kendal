<?xml version="1.0" encoding="utf-8"?>
<com.staples.mobile.cfa.widget.DataWrapper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/staples_off_white">

    <!-- Summary page contents -->
    <ScrollView
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbarStyle="outsideOverlay"
        android:background="@color/staples_off_white"
        android:paddingLeft="@dimen/sku_hori_padding"
        android:paddingRight="@dimen/sku_hori_padding">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SKU Photos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/staples_white"
                android:orientation="vertical">
                <android.support.v4.view.ViewPager
                    android:id="@+id/images"
                    android:layout_width="@dimen/sku_image_width"
                    android:layout_height="@dimen/sku_image_height"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/sku_padding_14"
                    android:paddingBottom="@dimen/sku_padding_10"
                    android:background="@color/staples_white"/>
                <com.staples.mobile.cfa.widget.PagerStripe
                    android:id="@+id/stripe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    stripeThickness="2dp"
                    android:textSize="@dimen/fontsize_12sp"/>
            </LinearLayout>

            <!-- Sku Info Sum -->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:textSize="@dimen/fontsize_20sp"
                android:textColor="@color/staples_black"
                android:paddingTop="@dimen/sku_padding_14"
                android:maxLines="3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="18dp"
                android:paddingBottom="17dp"
                android:paddingLeft="@dimen/sku_padding_10"
                android:paddingRight="@dimen/sku_padding_10">
                <com.staples.mobile.cfa.widget.PriceSticker
                    android:id="@+id/pricing"
                    style="@style/LargePriceSticker"
                    android:layout_gravity="center_vertical|left"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"/>
                <com.staples.mobile.cfa.widget.RatingStars
                    android:id="@+id/rating"
                    style="@style/SmallRatingStars"
                    android:layout_gravity="center_vertical|right"/>
            </LinearLayout>

            <!-- Shipping Logic -->
            <LinearLayout
                android:id="@+id/shipping_logic_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/overweight_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/staples_green"
                        android:layout_marginTop="@dimen/elevation_high"
                        android:layout_marginBottom="@dimen/elevation_high">
                        <TextView
                            style="@style/SkuSummaryHeader"
                            android:paddingLeft="@dimen/elevation_high"
                            android:paddingRight="@dimen/elevation_high"
                            android:paddingTop="@dimen/sku_hori_padding"
                            android:paddingBottom="@dimen/sku_hori_padding"
                            android:gravity="left"
                            android:text="@string/overweight"
                            android:textColor="@color/staples_white"/>
                    </LinearLayout>
                    <TextView
                        style="@style/SkuBulletTextStyle"
                        android:paddingTop="@dimen/sku_hori_padding"
                        android:paddingBottom="@dimen/sku_hori_padding"
                        android:layout_marginTop="@dimen/elevation_high"
                        android:layout_marginBottom="@dimen/elevation_high"
                        android:textSize="@dimen/fontsize_15sp"
                        android:gravity="center_vertical|left"
                        android:text="@string/overweight_warming"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_on_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/staples_green"
                        android:layout_marginTop="@dimen/elevation_high"
                        android:layout_marginBottom="@dimen/elevation_high">
                        <TextView
                            style="@style/SkuSummaryHeader"
                            android:paddingLeft="@dimen/elevation_high"
                            android:paddingRight="@dimen/elevation_high"
                            android:paddingTop="@dimen/sku_hori_padding"
                            android:paddingBottom="@dimen/sku_hori_padding"
                            android:gravity="left"
                            android:text="@string/add_on"
                            android:textColor="@color/staples_white"/>
                    </LinearLayout>
                    <TextView
                        style="@style/SkuBulletTextStyle"
                        android:paddingTop="@dimen/sku_hori_padding"
                        android:paddingBottom="@dimen/sku_hori_padding"
                        android:layout_marginTop="@dimen/elevation_high"
                        android:layout_marginBottom="@dimen/elevation_high"
                        android:textSize="@dimen/fontsize_15sp"
                        android:gravity="center_vertical|left"
                        android:text="@string/add_on_warming"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/staples_middle_gray"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/elevation_high"/>
            </LinearLayout>

            <!-- Description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/staples_white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/SkuSummaryHeader"
                        android:text="@string/description"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/staples_off_white"/>
                <TextView
                    android:id="@+id/numbers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/sku_padding_10"
                    android:textSize="@dimen/fontsize_14sp"
                    android:textColor="@color/staples_dark_gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"/>
                    <ImageView
                        android:id="@+id/description_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/sku_hori_padding"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_chevron_right_black"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Specifications -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="@dimen/verticalspacing_8dp">
                <LinearLayout
                    android:id="@+id/specifications"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/SkuSummaryHeader"
                        android:text="@string/specifications"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/specification_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_chevron_right_black"
                    android:paddingLeft="@dimen/sku_hori_padding"
                    android:paddingRight="@dimen/sku_hori_padding"
                    android:paddingTop="@dimen/verticalspacing_24dp"/>
            </LinearLayout>

            <!-- Customer reviews -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/verticalspacing_8dp">
                <LinearLayout
                    android:id="@+id/reviews"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/SkuSummaryHeader"
                        android:text="@string/reviews"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/review_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/sku_hori_padding"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_chevron_right_black"/>
            </LinearLayout>

            <!-- Accessory List -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/verticalspacing_8dp">
                <TextView
                    android:id="@+id/accessory_title"
                    style="@style/SkuSummaryHeader"
                    android:text="@string/accessories"/>
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/accessoryContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Summary page progress whirly -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Summary page nothing found -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/fontsize_20sp"
        android:text="@string/empty"/>

    <!-- Detail page -->
    <TabHost
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </TabHost>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/select_sku"
            android:textSize="@dimen/fontsize_16sp"
            android:text="@string/sku_set_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="onClick"
            android:clickable="true"
            android:textColor="@color/staples_green"
            android:visibility="gone"
            />
        <!-- Add to cart footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sku_add_cart_height"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <com.staples.mobile.cfa.widget.QuantityEditor
                android:id="@+id/quantity"
                style="@style/QtyEditorStyle"
                android:layout_width="@dimen/sku_add_cart_editor_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:hint="1"
                android:maxLength="4"
                android:drawableRight="@drawable/ic_arrow_drop_down"
                app:maxQuantity="10"
                app:popupWidth="120dp"/>
            <Button
                android:id="@+id/add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:textSize="@dimen/fontsize_20sp"
                android:text="@string/add_to_cart"/>
            <TextView
                android:id="@+id/footer_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/staples_black"
                android:textSize="@dimen/fontsize_16sp"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>
</com.staples.mobile.cfa.widget.DataWrapper>
