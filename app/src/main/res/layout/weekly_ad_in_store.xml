<com.staples.mobile.cfa.widget.AnimatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inStoreTV"
        android:paddingTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/text_red"
        android:text="@string/avail_retailonly"
        android:gravity="center"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/weekly_ad_image"
        android:layout_width="@dimen/weekly_ad_image_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        />
    <TextView
        android:id="@+id/weekly_ad_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/text_black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/weekly_ad_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textColor="@color/text_red"/>
        <TextView
            android:id="@+id/weekly_ad_price_extension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:paddingLeft="3dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/text_gray"
            android:text="@string/each"
            android:visibility="gone"/>
    </LinearLayout>
</com.staples.mobile.cfa.widget.AnimatorLayout>
