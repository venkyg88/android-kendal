<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <!-- Splash screen -->
    <ImageView
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="12dp"
        android:src="@drawable/splash"
        android:background="#ffffff"/>
    <!-- Main screen -->
    <com.staples.mobile.cfa.widget.LinearLayoutWithProgressOverlay
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">
        <!-- ActionBar, these must be kept in priority order -->
        <com.staples.mobile.cfa.widget.ActionBar
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:animateLayoutChanges="true"
            android:background="@color/staples_light">
            <ImageView
                android:id="@+id/close_button"
                style="@style/ActionBarIconStyle"
                android:layout_gravity="center_vertical|left"
                android:src="@drawable/ic_close_white"/>
            <ImageView
                android:id="@+id/action_left_drawer"
                style="@style/ActionBarIconStyle"
                android:layout_gravity="center_vertical|left"
                android:src="@drawable/ic_menu_white"/>
            <com.staples.mobile.cfa.widget.BadgeImageView
                android:id="@+id/action_show_cart"
                style="@style/ActionBarBadgeStyle"
                android:layout_gravity="center_vertical|right"/>
            <Button
                android:id="@+id/co_signin_button"
                style="@style/ActionBarButtonStyle"
                android:layout_gravity="center_vertical|right"
                android:text="@string/common_signin_button_text"/>
            <TextView
                android:id="@+id/cart_item_qty"
                style="@style/ActionBarTextStyle"
                android:layout_gravity="center_vertical|right"/>
            <ImageView
                android:id="@+id/option_icon"
                style="@style/ActionBarIconStyle"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/ic_search_white"/>
            <SearchView
                android:id="@+id/search_text"
                style="@style/ActionBarSearchStyle"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/ic_search_white"/>
            <ImageView
                android:id="@+id/action_logo"
                style="@style/ActionBarIconStyle"
                android:layout_gravity="center_vertical|left"
                android:src="@drawable/ic_staples"/>
            <TextView
                android:id="@+id/action_title"
                style="@style/ActionBarTextStyle"
                android:layout_gravity="center_vertical|left"/>
        </com.staples.mobile.cfa.widget.ActionBar>
        <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- Personalized message bar -->
            <LinearLayout
                android:id="@+id/message_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@color/background_extra_light_gray"
                android:visibility="gone">
                <LinearLayout
                    android:id="@+id/login_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/login_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/login_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textSize="14sp"
                        android:visibility="gone"
                        android:textColor="@android:color/black"/>
                    <LinearLayout
                        android:id="@+id/login_info_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/login_sign_in"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:text="Sign In"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:text=" or "/>
                        <TextView
                            android:id="@+id/login_sign_up"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:text="Sign Up"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:text="\?"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/background_light_gray"
                    android:layout_gravity="top"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <LinearLayout
                    android:id="@+id/store_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_locator"/>
                        <TextView
                            android:id="@+id/store_status"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="@android:color/black"
                            android:text="Open"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:text="Store nearby you"/>
                        <TextView
                            android:id="@+id/store_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:lines="1"
                            android:ellipsize="end"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:text="Cambridge, MA"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- Main content -->
            <FrameLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <!-- Left drawer (menu) -->
            <ListView
                android:id="@+id/left_drawer"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:orientation="vertical"
                android:background="#ffffff"
                android:choiceMode="singleChoice"/>
        </android.support.v4.widget.DrawerLayout>
    </com.staples.mobile.cfa.widget.LinearLayoutWithProgressOverlay>

    <RelativeLayout
        android:id="@+id/progress_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#6f000022" >
        <ProgressBar
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateOnly="true" />
    </RelativeLayout>
</FrameLayout>
