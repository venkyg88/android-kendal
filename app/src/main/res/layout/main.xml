<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <!-- Splash screen -->
    <ImageView
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="12dp"
        android:src="@drawable/splash"
        android:background="#ffffff"/>
    <!-- Main screen -->
    <com.staples.mobile.cfa.widget.LinearLayoutWithProgressOverlay
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">
        <com.staples.mobile.cfa.widget.ActionBar
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:animateLayoutChanges="true"
            android:background="@color/staples_light">
            <!-- ActionBar, these must be kept in priority order -->
            <ImageView
                android:id="@+id/close_button"
                style="@style/ActionBarIconStyle"
                android:layout_gravity="center_vertical|left"
                android:src="@drawable/ic_close_white"/>
            <ImageView
                android:id="@+id/back_button"
                style="@style/ActionBarIconStyle"
                android:layout_gravity="center_vertical|left"
                android:src="@drawable/ic_arrow_back_white"/>
            <ImageView
                android:id="@+id/action_left_drawer"
                style="@style/ActionBarIconStyle"
                android:layout_gravity="center_vertical|left"
                android:src="@drawable/ic_menu_white"/>
            <com.staples.mobile.cfa.widget.BadgeImageView
                android:id="@+id/action_show_cart"
                style="@style/ActionBarBadgeStyle"
                android:layout_gravity="center_vertical|right"/>
            <Button
                android:id="@+id/co_signin_button"
                style="@style/ActionBarButtonStyle"
                android:layout_gravity="center_vertical|right"
                android:text="@string/common_signin_button_text"/>
            <TextView
                android:id="@+id/cart_item_qty"
                style="@style/ActionBarTextStyle"
                android:layout_gravity="center_vertical|right"/>
            <ImageView
                android:id="@+id/option_icon"
                style="@style/ActionBarIconStyle"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/ic_search_white"/>
            <com.staples.mobile.cfa.search.SearchBarView
                android:id="@+id/search_view"
                style="@style/ActionBarSearchStyle"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/ic_search_white"/>
            <ImageView
                android:id="@+id/action_logo"
                style="@style/ActionBarIconStyle"
                android:layout_gravity="center_vertical|left"
                android:src="@drawable/ic_staples"/>
            <TextView
                android:id="@+id/action_title"
                style="@style/ActionBarTextStyle"
                android:layout_gravity="center_vertical|left"/>
        </com.staples.mobile.cfa.widget.ActionBar>
        <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- Main content -->
            <FrameLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <!-- Left drawer (menu) -->
            <ListView
                android:id="@+id/left_drawer"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:orientation="vertical"
                android:background="#ffffff"
                android:choiceMode="singleChoice"/>
        </android.support.v4.widget.DrawerLayout>
    </com.staples.mobile.cfa.widget.LinearLayoutWithProgressOverlay>

    <!--progress indicator overlay-->
    <RelativeLayout
        android:id="@+id/progress_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#6f000022" >
        <ProgressBar
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateOnly="true" />
    </RelativeLayout>

    <!--notification banner-->
    <TextView
        android:id="@+id/notification_banner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:paddingLeft="16dp"
        android:visibility="invisible"
        android:gravity="left|center_vertical"
        android:textSize="16sp"
        android:textColor="@color/text_white"
        android:background="@color/background_dark_gray" >
    </TextView>

</FrameLayout>
