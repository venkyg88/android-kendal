<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">
    <!-- Shipping address -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                style="@style/GraySubheading"
                android:text="@string/shipping_addr"/>
            <TextView
                android:id="@+id/checkout_shipping_addr"
                style="@style/CheckoutText"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/shipping_addresses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/more_arrow"/>
    </LinearLayout>
    <!-- Payment Method -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                style="@style/GraySubheading"
                android:text="@string/payment_method"/>
            <TextView
                android:id="@+id/checkout_payment_method"
                style="@style/CheckoutText"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/payment_methods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/more_arrow"/>
    </LinearLayout>
    <!-- Billing address -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                style="@style/GraySubheading"
                android:text="@string/billing_addr"/>
            <TextView
                android:id="@+id/checkout_billing_addr"
                style="@style/CheckoutText"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/billing_addresses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/more_arrow"/>
    </LinearLayout>
</LinearLayout>

