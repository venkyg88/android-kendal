<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:contentPadding="@dimen/margin_16dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="@color/staples_white"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--ink cartridges recycled-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/cartridges_recycled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="6dp"
                android:textSize="@dimen/fontsize_30sp"
                android:textColor="@color/staples_dark_gray"/>
            <TextView
                android:id="@+id/cartridges_recycled_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fontsize_16sp"
                android:textColor="@color/staples_black"/>
        </LinearLayout>

        <!--ink cartridges limit-->
        <TextView
            android:id="@+id/cartridges_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontsize_16sp"
            android:textColor="@color/staples_dark_gray"/>

        <!--ink cartridges earned-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/verticalspacing_24dp"
            >
            <TextView
                android:id="@+id/cartridges_earned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="6dp"
                android:textSize="@dimen/fontsize_30sp"
                android:textColor="@color/staples_dark_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fontsize_16sp"
                android:textColor="@color/staples_black"
                android:text="@string/rewards_earned"/>
        </LinearLayout>

        <!--ink cartridges message-->
        <TextView
            android:id="@+id/ink_rewards_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontsize_16sp"
            android:textColor="@color/staples_dark_gray"/>

    </LinearLayout>
</android.support.v7.widget.CardView>
