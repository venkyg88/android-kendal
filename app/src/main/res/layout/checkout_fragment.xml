<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

<com.staples.mobile.cfa.widget.LinearLayoutWithProgressOverlay
    android:id="@+id/checkout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cart_title"
        android:layout_width="match_parent"
        style="@style/CartHeader"
        android:textSize="24sp"
        android:text="@string/checkout_title"/>

    <!-- scrollable contents -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">
            <!-- Shipping address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/CheckoutSubheading"
                        android:text="@string/shipping_addr"/>
                    <TextView
                        android:id="@+id/checkout_shipping_addr"
                        style="@style/CheckoutText"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/shipping_addr_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/more_arrow"/>
            </LinearLayout>
            <!-- Payment Method -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/CheckoutSubheading"
                        android:text="@string/payment_method"/>
                    <TextView
                        android:id="@+id/checkout_payment_method"
                        style="@style/CheckoutText"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/payment_method_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/more_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="6dp" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_cid"/>
                <EditText
                    android:id="@+id/payment_cid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    />
            </LinearLayout>

            <!-- Billing address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/CheckoutSubheading"
                        android:text="@string/billing_addr"/>
                    <TextView
                        android:id="@+id/checkout_billing_addr"
                        style="@style/CheckoutText"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/billing_addr_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/more_arrow"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- delivery range -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e6e6e6" >
        <TextView
            style="@style/CheckoutFooter"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/delivery_range"
            />
        <TextView
            android:id="@+id/checkout_delivery_range"
            style="@style/CheckoutFooter"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <!-- coupons & rewards -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cccccc"
        >
        <TextView
            style="@style/CheckoutFooter"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/coupons_rewards"
            />
        <TextView
            android:id="@+id/checkout_coupons_rewards"
            style="@style/CheckoutFooter"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text="TBD"
            android:textColor="#FF0000"
            />
    </RelativeLayout>

    <!-- shipping -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cccccc">
        <TextView
            style="@style/CheckoutFooter"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="@string/shipping"
            />
        <TextView
            android:id="@+id/checkout_shipping"
            style="@style/CheckoutFooter"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            />
    </RelativeLayout>

    <!-- sales tax -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cccccc">
        <TextView
            style="@style/CheckoutFooter"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/tax"
            />
        <TextView
            android:id="@+id/checkout_tax"
            style="@style/CheckoutFooter"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <!-- submit order -->
    <RelativeLayout
        android:id="@+id/checkout_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF6666">
        <TextView
            style="@style/CheckoutFooter"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/submit_order"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            />
        <TextView
            android:id="@+id/checkout_order_total"
            style="@style/CheckoutFooter"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            />
    </RelativeLayout>

</com.staples.mobile.cfa.widget.LinearLayoutWithProgressOverlay>

<!-- progress whirly -->
<RelativeLayout
    android:id="@+id/checkout_progress_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:clickable="false"
    android:background="#6f000022" >
    <ProgressBar
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateOnly="true" />
</RelativeLayout>

</FrameLayout>