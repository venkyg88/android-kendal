<?xml version="1.0" encoding="utf-8"?>
<com.staples.mobile.cfa.widget.AnimatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/staples_white">

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_16dp"
        android:background="@color/staples_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderNumber"
            android:textSize="@dimen/fontsize_24sp"
            android:textColor="@color/staples_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderDate"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/fontsize_16sp"
            android:textColor="@color/staples_black" />


        <!--dynamically filled list of sku items-->
        <LinearLayout
            android:id="@+id/sku_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/verticalspacing_8dp"
            android:paddingTop="0dp"
            android:orientation="vertical"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/verticalspacing_8dp"
            android:background="@color/staples_middle_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Information"
            android:id="@+id/paymentLbl"
            android:layout_marginTop="@dimen/verticalspacing_8dp"
            android:textSize="@dimen/fontsize_24sp"
            android:textColor="@color/staples_black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment method"
            android:id="@+id/paymentMethodLbl"
            android:layout_marginTop="@dimen/verticalspacing_8dp"
            android:textSize="@dimen/fontsize_16sp"
            android:textColor="@color/staples_middle_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/verticalspacing_8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/creditCardImage"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/american_express"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardInfoTV"
                android:textSize="@dimen/fontsize_16sp"
                android:textColor="@color/staples_black" />
        </LinearLayout>

        <!--horiz rule-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/verticalspacing_8dp"
            android:background="@color/staples_middle_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Billing address"
            android:id="@+id/addressLbl"
            android:layout_marginTop="@dimen/verticalspacing_8dp"
            android:textSize="@dimen/fontsize_16sp"
            android:textColor="@color/staples_middle_gray" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/billingNameTV"
            android:layout_marginTop="@dimen/verticalspacing_8dp"
            android:textSize="@dimen/fontsize_16sp"
            android:textColor="@color/staples_black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addressTV"
            android:layout_marginTop="@dimen/verticalspacing_8dp"
            android:textSize="@dimen/fontsize_16sp"
            android:textColor="@color/staples_black" />

        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dip"
        android:background="@color/staples_middle_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Total"
            android:id="@+id/orderFinalLbl"
            android:layout_marginTop="@dimen/verticalspacing_8dp"
            android:textSize="@dimen/fontsize_24sp"
            android:textColor="@color/staples_black" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item SubTotal"
                android:id="@+id/subTotalLbl"
                android:layout_marginTop="@dimen/verticalspacing_8dp"
                android:textSize="@dimen/fontsize_16sp"
                android:textColor="@color/staples_black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orderSubTotalTV"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/verticalspacing_8dp"
                android:textSize="@dimen/fontsize_16sp"
                android:textColor="@color/staples_black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coupons &amp; Rewards"
                android:id="@+id/couponsLbl"
                android:layout_marginTop="@dimen/verticalspacing_8dp"
                android:textSize="@dimen/fontsize_16sp"
                android:textColor="@color/staples_black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/couponsTV"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/verticalspacing_8dp"
                android:textSize="@dimen/fontsize_16sp"
                android:textColor="@color/staples_green" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping"
                android:id="@+id/shippingLbl"
                android:layout_marginTop="@dimen/verticalspacing_8dp"
                android:textSize="@dimen/fontsize_16sp"
                android:textColor="@color/staples_black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shippingTV"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/verticalspacing_8dp"
                android:textSize="@dimen/fontsize_16sp"
                android:textColor="@color/staples_green" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tax"
                android:id="@+id/taxLbl"
                android:layout_marginTop="@dimen/verticalspacing_8dp"
                android:textSize="@dimen/fontsize_16sp"
                android:textColor="@color/staples_black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orderTaxTV"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/verticalspacing_8dp"
                android:textSize="@dimen/fontsize_16sp"
                android:textColor="@color/staples_black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:id="@+id/orderGrandTotalLbl"
                android:layout_marginTop="@dimen/verticalspacing_8dp"
                android:textSize="@dimen/fontsize_16sp"
                android:textColor="@color/staples_black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orderGrandTotalTV"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/verticalspacing_8dp"
                android:textSize="@dimen/fontsize_16sp"
                android:textColor="@color/staples_black" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>

</com.staples.mobile.cfa.widget.AnimatorLayout>