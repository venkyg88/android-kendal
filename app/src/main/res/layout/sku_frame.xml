<?xml version="1.0" encoding="utf-8"?>
<com.staples.mobile.cfa.widget.DataWrapper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Summary page contents -->
    <ScrollView
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Photos -->
            <android.support.v4.view.ViewPager
                android:id="@+id/images"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="6dp"/>
            <com.staples.mobile.cfa.widget.PagerStripe
                android:id="@+id/stripe"
                style="@style/PagerStripe"/>
            <!-- Info -->
            <TextView
                android:id="@+id/title"
                style="@style/SkuSummaryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="3"
                android:ellipsize="end"/>
            <com.staples.mobile.cfa.widget.RatingStars
                android:id="@+id/rating"
                style="@style/LargeRatingStars"/>
            <com.staples.mobile.cfa.widget.PriceSticker
                android:id="@+id/pricing"
                style="@style/LargePriceSticker"/>
            <!-- Description -->
            <TextView
                style="@style/SkuSummaryHeader"
                android:text="@string/product_description"/>
            <LinearLayout
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
            <!-- Specifications -->
            <TextView
                style="@style/SkuSummaryHeader"
                android:text="@string/product_specs"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="16dp"
                android:text="@string/lorem_ipsum"/>
            <!-- Customer reviews -->
            <TextView
                style="@style/SkuSummaryHeader"
                android:text="@string/customer_reviews"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="16dp"
                android:text="@string/lorem_ipsum"/>
        </LinearLayout>
    </ScrollView>

    <!-- Summary page progress whirly -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Summary page nothing found -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="20dp"
        android:text="@string/empty"/>

    <!-- Detail page -->
    <android.support.v4.view.ViewPager
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffcccc">
        <android.support.v4.view.PagerTabStrip
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"/>
    </android.support.v4.view.ViewPager>

    <!-- Add to cart footer -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:gravity="center"
        android:textSize="20dp"
        android:background="#00ff00"
        android:text="@string/add_to_cart"/>
</com.staples.mobile.cfa.widget.DataWrapper>
