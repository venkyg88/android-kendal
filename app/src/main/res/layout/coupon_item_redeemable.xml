<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coupon_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/coupon_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="72dp"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:textSize="@dimen/fontsize_16sp"
        android:textColor="@color/staples_black"/>
    <TextView
        android:id="@+id/coupon_expire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textSize="@dimen/fontsize_16sp"
        android:textColor="@color/staples_black"/>
    <Button
        android:id="@+id/reward_add_button"
        android:layout_width="60dp"
        android:layout_height="36dp"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/rounded_corner_green"
        android:text="@string/add"
        android:textSize="@dimen/fontsize_16sp"
        android:textColor="@color/staples_white"/>
    <Button
        android:id="@+id/reward_view_button"
        android:layout_width="60dp"
        android:layout_height="36dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginLeft="8dp"
        android:background="@drawable/rounded_corner_green"
        android:text="@string/view"
        android:textSize="@dimen/fontsize_16sp"
        android:textColor="@color/staples_white"/>
    <!--REMOVE button (only used in rewards dashboard)-->
    <ImageView
        android:id="@+id/reward_remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_close_black"
        android:visibility="gone"/>
</LinearLayout>
