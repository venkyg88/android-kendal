<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fixed_grid_wide_height"
    android:orientation="horizontal"
    android:padding="6dp"
    android:background="@color/staples_white">
    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/image_square_size"
        android:layout_height="@dimen/image_square_size"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="6dp"/>
    <TextView
        android:id="@+id/title"
        style="@style/SmallProductTitle"
        android:layout_toRightOf="@+id/image"/>
</LinearLayout>
