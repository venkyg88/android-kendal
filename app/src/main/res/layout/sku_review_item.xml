<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/sku_padding_10"
    android:paddingRight="@dimen/sku_padding_10"
    android:paddingTop="@dimen/sku_padding_5"
    android:paddingBottom="@dimen/sku_padding_5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/sku_padding_5">
        <app.staples.mobile.cfa.widget.RatingStars
            android:id="@+id/sku_review_rating"
            style="@style/SmallRatingStars"
            android:paddingRight="@dimen/sku_padding_10"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/sku_review_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/staples_black"
            android:paddingLeft="@dimen/sku_padding_10"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/sku_review_attribution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sku_padding_5"
        android:paddingBottom="@dimen/sku_padding_5"
        android:textColor="@color/staples_dark_gray"/>
    <TextView
        android:id="@+id/sku_review_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingTop="@dimen/sku_padding_5"
        android:paddingBottom="@dimen/sku_padding_5"
        android:textColor="@color/staples_black"/>
</LinearLayout>
