<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shipmentLbl"
        android:layout_marginTop="@dimen/verticalspacing_16dp"
        android:textSize="@dimen/fontsize_24sp"
        android:textColor="@color/staples_black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deliveryDateTV"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_16dp"
        android:textSize="@dimen/fontsize_16sp"
        android:textColor="@color/staples_black" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/verticalspacing_16dp"
        android:layout_marginBottom="@dimen/verticalspacing_16dp"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="120dip"
        android:id="@+id/skuImage"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/verticalspacing_16dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/verticalspacing_16dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shipmentTitle"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/fontsize_16sp"
                android:textColor="@color/staples_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shipmentPrice"
                android:textSize="@dimen/fontsize_16sp"
                android:textColor="@color/staples_green" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/verticalspacing_8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:id="@+id/shipmentQtyLbl"
                    android:textSize="@dimen/fontsize_16sp"
                    android:textColor="@color/staples_dark_gray" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shipmentQty"
                    android:textSize="@dimen/fontsize_16sp"
                    android:layout_marginLeft="10dip"
                    android:textColor="@color/staples_dark_gray" />
                </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
