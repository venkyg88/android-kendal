<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginLeft="@dimen/left_margin"
	android:layout_marginRight="@dimen/right_margin"
>

	<View android:id="@+id/strut"
		android:layout_alignParentTop="true"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_centerHorizontal="true"
	/>

	<TextView android:id="@+id/autoCompleteAnchor"
		android:layout_below="@id/strut"
		android:layout_centerHorizontal="true"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:visibility="invisible"
	/>

	<TextView
		android:id="@+id/firstNameLabel"
		android:ems="10"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:paddingLeft="4dp"
		android:text="@string/first_name_label"
		android:textColor="@color/text_blue"
		android:visibility="invisible"
	/>

    <EditText
        android:id="@+id/firstName"
        android:layout_below="@id/firstNameLabel"
        android:ems="10"
		android:hint="@string/first_name_label"
        android:inputType="textPersonName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/lastName"
        android:layout_toStartOf="@+id/lastName"
        android:layout_width="wrap_content"
		android:nextFocusDown="@+id/lastName"
	/>

	<TextView
		android:id="@+id/lastNameLabel"
		android:ems="10"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/strut"
		android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
		android:paddingLeft="4dp"
		android:text="@string/last_name_label"
		android:textColor="@color/text_blue"
		android:visibility="invisible"
	/>

    <EditText
        android:id="@+id/lastName"
        android:layout_below="@id/lastNameLabel"
        android:ems="10"
		android:hint="@string/last_name_label"
        android:inputType="textPersonName"
		android:layout_alignLeft="@+id/lastNameLabel"
		android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
	/>

	<TextView
		android:id="@+id/phoneLabel"
		android:layout_below="@id/firstName"
		android:ems="10"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_width="wrap_content"
		android:paddingLeft="4dp"
		android:text="@string/phone_label"
		android:textColor="@color/text_blue"
		android:visibility="invisible"
	/>

    <EditText
        android:id="@+id/phoneNumber"
		android:layout_below="@id/phoneLabel"
        android:ems="10"
		android:hint="@string/phone_label"
        android:inputType="phone"
        android:layout_alignEnd="@+id/lastName"
        android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/lastName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
	/>


    <!--email address (only used by guest checkout, otherwise visibility stays GONE)-->
    <TextView
        android:id="@+id/emailAddrLabel"
        android:layout_below="@id/phoneNumber"
        android:ems="10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:paddingLeft="4dp"
        android:text="@string/email"
        android:textColor="@color/text_blue"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/emailAddr"
        android:layout_below="@id/emailAddrLabel"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:layout_alignEnd="@+id/lastName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/lastName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:visibility="gone"
        />

    <!--by default, set this to below phone number since email address will not be visible except
        in guest checkout. Guest checkout will take care of adjusting positioning for itself. -->
	<LinearLayout
		android:id="@+id/addressLayout"
		android:layout_below="@id/phoneNumber"
		android:layout_alignEnd="@+id/lastName"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignRight="@+id/lastName"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

        <!--address autocomplete and its label-->
        <LinearLayout
            android:id="@+id/addressACTVLayout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addressACTVLabel"
                android:ems="10"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:paddingLeft="4dp"
                android:text="@string/address_label"
                android:textColor="@color/text_blue"
                android:visibility="invisible"
                />

            <AutoCompleteTextView
                android:id="@+id/addressACTV"
                android:ems="10"
                android:hint="@string/address_label"
                android:dropDownAnchor="@+id/autoCompleteAnchor"
                android:inputType="textPostalAddress"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
            />
        </LinearLayout>

        <!--address manual-entry and its label-->
        <LinearLayout
            android:id="@+id/addressManualLayout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/addressLabel"
                android:layout_below="@id/phoneNumber"
                android:ems="10"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:paddingLeft="4dp"
                android:text="@string/address_label"
                android:textColor="@color/text_blue"
                android:visibility="invisible"
                />
            <EditText
                android:id="@+id/addressET"
                android:ems="10"
                android:hint="@string/address_label"
                android:inputType="textPostalAddress"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
            />
        </LinearLayout>

        <!--apartment and its label-->
        <LinearLayout
            android:id="@+id/apartmentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/apartmentLabel"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:paddingLeft="4dp"
                android:text="@string/apartment_label"
                android:textColor="@color/text_blue"
                android:visibility="invisible"
                />

            <EditText
                android:id="@+id/apartment"
                android:ems="5"
                android:hint="@string/apartment_label"
                android:inputType="textPostalAddress"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />
        </LinearLayout>
	</LinearLayout>


	<TextView
		android:id="@+id/cityLabel"
		android:layout_below="@id/addressLayout"
		android:ems="10"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_width="wrap_content"
		android:paddingLeft="4dp"
		android:text="@string/city_label"
		android:textColor="@color/text_blue"
		android:visibility="gone"
	/>

    <EditText
        android:id="@+id/city"
		android:layout_below="@id/cityLabel"
        android:ems="10"
		android:hint="@string/city_label"
        android:inputType="textPostalAddress"
		android:layout_alignEnd="@+id/lastName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/lastName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
		android:visibility="gone"
	/>

	<TextView
		android:id="@+id/stateLabel"
		android:layout_below="@id/city"
		android:ems="10"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_width="wrap_content"
		android:paddingLeft="4dp"
		android:text="@string/state_label"
		android:textColor="@color/text_blue"
		android:visibility="gone"
	/>

    <EditText
        android:id="@+id/state"
		android:layout_below="@id/stateLabel"
		android:hint="@string/state_label"
        android:inputType="textPostalAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/lastName"
        android:layout_toStartOf="@+id/lastName"
        android:layout_width="wrap_content"
		android:nextFocusDown="@+id/zipCode"
		android:visibility="gone"
	/>

	<TextView
		android:id="@+id/zipCodeLabel"
		android:layout_alignBaseline="@+id/stateLabel"
		android:layout_alignLeft="@+id/lastName"
		android:ems="10"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:paddingLeft="4dp"
		android:text="@string/zip_code_label"
		android:textColor="@color/text_blue"
		android:visibility="gone"
	/>

    <EditText
        android:id="@+id/zipCode"
		android:layout_below="@id/zipCodeLabel"
		android:layout_alignBaseline="@+id/state"
		android:layout_alignLeft="@+id/zipCodeLabel"
        android:ems="10"
		android:hint="@string/zip_code_label"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
		android:visibility="gone"
	/>

    <Button
        android:id="@+id/addressSaveBtn"
		android:layout_below="@id/state"
		android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
		android:text="@string/save_btn"
	/>

</RelativeLayout>
