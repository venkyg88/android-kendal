<?xml version="1.0" encoding="utf-8"?>

<com.staples.mobile.cfa.widget.AnimatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profile_fragment">

    <TextView
        android:layout_width="match_parent"
        android:text="@string/email"
        android:id="@+id/emailLabel"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        style="@style/GraySubheading"
        android:paddingTop="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailProfile"
        android:paddingTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        style="@style/DrawerStyle"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:paddingTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:text="@string/username"
        style="@style/GraySubheading"
        android:id="@+id/userNameLabel"
        android:paddingTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userNameProfile"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:layout_marginLeft="10dp"
        style="@style/DrawerStyle"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingTop="10dp"
        android:background="@android:color/black"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:text="Shipping/Billing"
            android:textSize="16sp"
            android:background="@color/background_extra_light_gray"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/addressET"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            style="@style/DrawerStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addShippingBtn"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ccET"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            style="@style/DrawerStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addCCBtn"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
</com.staples.mobile.cfa.widget.AnimatorLayout>
