<app.staples.mobile.cfa.widget.AnimatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/staples_off_white"
    tools:context="app.staples.mobile.cfa.weeklyad_refresh.WeeklyAdFragment">

    // Store city and Store locator and Promotion page switcher images
    <LinearLayout
        android:layout_marginTop="@dimen/action_bar_half_margin"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/action_bar_half_margin"
        android:layout_marginRight="@dimen/action_bar_half_margin"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/store_name"
            android:padding="@dimen/action_bar_half_margin"
            android:textSize="@dimen/fontsize_20sp"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/goto_here_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/action_bar_half_margin"
            android:src="@drawable/ic_store_locator_black"/>
        <ImageView
            android:id="@+id/list_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/action_bar_half_margin"
            android:src="@drawable/ic_view_list_black"/>
        <ImageView
            android:id="@+id/promotions_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/action_bar_half_margin"
            android:src="@drawable/ic_weekly_ad_black"/>
    </LinearLayout>

    <!-- WeeklyAd promotion images-->
    <android.support.v4.view.ViewPager
        android:id="@+id/promotion_images"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingLeft="@dimen/action_bar_half_margin"
        android:paddingRight="@dimen/action_bar_half_margin"
        android:background="@color/staples_off_white" />

    <!-- Best deal of the week layout-->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="@dimen/action_bar_half_margin"
        card_view:cardBackgroundColor="@color/staples_white">
        <LinearLayout
            android:id="@+id/deal_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_32dp"
                android:background="@color/staples_red">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/action_bar_half_margin"
                    android:textColor="@color/staples_white"
                    android:text="@string/deal_text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/action_bar_half_margin">
                <ImageView
                    android:id="@+id/dealImage"
                    android:layout_width="@dimen/image_square_size"
                    android:layout_height="@dimen/image_square_size"
                    android:layout_gravity="center_horizontal"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/dealTitle"
                        style="@style/SmallProductTitle"
                        android:paddingLeft="@dimen/action_bar_half_margin"/>
                    <TextView
                        android:id="@+id/dealPricing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/action_bar_half_margin"
                        android:textColor="@color/staples_red"/>
                    <TextView
                        android:id="@+id/dealExpiry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/action_bar_half_margin"/>
                    <Button
                        android:id="@+id/dealViewAll"
                        android:layout_width="@dimen/weeklyad_viewall_width"
                        android:layout_height="@dimen/weeklyad_viewall_height"
                        android:textSize="@dimen/fontsize_10sp"
                        android:text="@string/weekly_ad_view_more"
                        android:background="@color/staples_blue"
                        android:textColor="@color/staples_white"
                        android:layout_gravity="right"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!-- Categories layout-->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="@dimen/action_bar_half_margin"
        card_view:cardBackgroundColor="@color/staples_white">

        <!--list of categories-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/weekly_ad_category_items"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>

</app.staples.mobile.cfa.widget.AnimatorLayout>
