<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bundle_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fixed_grid_tall_height"
    android:paddingLeft="@dimen/verticalspacing_8dp"
    android:paddingRight="@dimen/verticalspacing_8dp"
    android:background="@color/staples_white">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_square_size"
        android:layout_marginTop="@dimen/margin_16dp"/>
    <TextView
        android:id="@+id/title"
        style="@style/SmallProductTitle"
        android:layout_below="@+id/image"
        android:layout_marginTop="@dimen/margin_16dp"/>

    <!-- Shipping Logic -->
    <LinearLayout
        android:id="@+id/shipping_logic_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/overweight_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/elevation_high"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/staples_green">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontsize_12sp"
                    android:paddingLeft="@dimen/left_margin"
                    android:paddingRight="@dimen/right_margin"
                    android:gravity="left"
                    android:text="@string/overweight"
                    android:textColor="@color/staples_white"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_on_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/elevation_high"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/staples_green">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontsize_12sp"
                    android:paddingLeft="@dimen/left_margin"
                    android:paddingRight="@dimen/right_margin"
                    android:gravity="left"
                    android:text="@string/add_on"
                    android:textColor="@color/staples_white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.staples.mobile.cfa.widget.PriceSticker
        android:id="@+id/pricing"
        style="@style/SmallPriceSticker"
        android:layout_below="@+id/shipping_logic_layout"
        android:layout_marginTop="@dimen/elevation_high"/>
    <include layout="@layout/rebate" android:id="@+id/rebate_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pricing"
        android:visibility="gone"/>
    <com.staples.mobile.cfa.widget.RatingStars
        android:id="@+id/rating"
        style="@style/SmallRatingStars"
        android:layout_below="@+id/rebate_layout"
        android:layout_marginTop="@dimen/verticalspacing_8dp"/>
    <ImageView
        android:id="@+id/bundle_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/action_bar_half_margin"
        android:paddingBottom="@dimen/action_bar_half_margin"/>
    <ProgressBar
        android:id="@+id/bundle_whirlie"
        android:layout_width="@dimen/verticalspacing_48dp"
        android:layout_height="@dimen/verticalspacing_48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/action_bar_half_margin"
        android:paddingBottom="@dimen/action_bar_half_margin"
        android:paddingLeft="@dimen/action_bar_half_margin"
        android:visibility="gone"/>
</RelativeLayout>
