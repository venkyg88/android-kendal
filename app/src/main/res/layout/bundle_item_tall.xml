<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bundle_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fixed_grid_tall_height"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/staples_white">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_square_size"
        android:layout_marginTop="22dp"/>
    <TextView
        android:id="@+id/title"
        style="@style/SmallProductTitle"
        android:layout_below="@+id/image"
        android:layout_marginTop="20dp"/>
    <com.staples.mobile.cfa.widget.PriceSticker
        android:id="@+id/pricing"
        style="@style/SmallPriceSticker"
        android:layout_below="@+id/title"
        android:layout_marginTop="6dp"/>
    <com.staples.mobile.cfa.widget.RatingStars
        android:id="@+id/rating"
        style="@style/SmallRatingStars"
        android:layout_below="@+id/pricing"
        android:layout_marginTop="6dp"/>
    <ImageView
        android:id="@+id/bundle_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
