<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp"
    android:background="#ffffff">
    <ImageView
        android:id="@+id/cartitem_image"
        android:layout_width="@dimen/image_square_size"
        android:layout_height="@dimen/image_square_size"
        android:layout_marginRight="6dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/cartitem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="16sp"/>
        <com.staples.mobile.cfa.widget.PriceSticker
            android:id="@+id/cartitem_price"
            style="@style/SmallPriceSticker"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cartitem_qty_label"
                android:textSize="16sp"/>
            <!--<AutoCompleteTextView-->
                <!--android:id="@+id/cartitem_qty"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:completionThreshold="1"-->
                <!--android:numeric="integer"-->
                <!--android:imeOptions="actionDone"-->
                <!--android:textSize="16dp"/>-->
            <!--<Spinner-->
                <!--android:id="@+id/cartitem_qty"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="16dp"/>-->
            <com.staples.mobile.cfa.widget.CartItemQtyEditor
                android:id="@+id/cartitem_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numeric="integer"
                android:imeOptions="actionDone"
                android:selectAllOnFocus="true"
                android:layout_marginRight="6dp"
                android:textSize="20dp"
                />
            <Button
                android:id="@+id/cartitem_delete"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:text="X"
                android:textSize="14dp"
                />
            <Button
                android:id="@+id/cartitem_update"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:text="@string/update_button"
                android:textSize="14dp"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

