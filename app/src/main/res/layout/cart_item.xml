<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <ImageView
        android:id="@+id/cartitem_image"
        android:layout_width="@dimen/image_square_size"
        android:layout_height="@dimen/image_square_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"/>
    <RelativeLayout
        android:id="@+id/cartitem_desc_layout"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_toRightOf="@id/cartitem_image"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/cartitem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="@color/text_nearly_black"
            android:paddingBottom="0dp"/>
        <com.staples.mobile.cfa.widget.PriceSticker
            android:id="@+id/cartitem_price"
            style="@style/SmallPriceSticker"
            android:layout_below="@id/cartitem_title"
            android:paddingTop="8dp"
            android:paddingBottom="6dp"/>
        <ImageView
            android:id="@+id/cartitem_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cartitem_price"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:padding="1dp"
            android:src="@drawable/ic_close_black_18dp"
            />
        <com.staples.mobile.cfa.widget.QuantityEditor
            android:id="@+id/cartitem_qty"
            style="@style/HackEditorStyle"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cartitem_price"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/text_nearly_black"
            android:maxLength="4"
            app:maxQuantity="10"
            app:popupWidth="120dp"/>

    </RelativeLayout>

    <!--horizontal rule-->
    <View
        android:id="@+id/cart_item_horizontal_rule"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/cartitem_desc_layout"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:background="@color/hr_extra_light_gray"
        android:visibility="gone"/>

</RelativeLayout>

