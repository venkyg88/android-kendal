<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <ImageView
        android:id="@+id/cartitem_image"
        android:layout_width="@dimen/image_square_size"
        android:layout_height="@dimen/image_square_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="12dp"/>
    <RelativeLayout
        android:id="@+id/cartitem_desc_layout"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_toRightOf="@id/cartitem_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/cartitem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
			android:layout_marginBottom="8dp"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="@color/text_nearly_black"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"/>

		<!-- Shipping Logic -->
		<RelativeLayout
			android:id="@+id/shipping_and_price_layout"
			android:layout_below="@id/cartitem_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		>

			<TextView
				android:id="@+id/overweight_warning"
				android:background="@color/background_dark_blue"
				android:layout_alignParentLeft="true"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:layout_marginTop="3dp"
				android:layout_width="wrap_content"
				android:paddingBottom="2dp"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:paddingTop="2dp"
				android:text="@string/overweight"
				android:textAllCaps="true"
				android:textColor="@color/text_white"
				android:textSize="10sp"
				android:textStyle="bold"
				android:visibility="gone"
			/>

			<TextView
				android:id="@+id/add_on_warning"
				android:background="@color/background_light_blue"
				android:layout_alignParentLeft="true"
				android:layout_below="@id/overweight_warning"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:layout_marginTop="3dp"
				android:layout_width="wrap_content"
				android:paddingBottom="2dp"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:paddingTop="2dp"
				android:textAllCaps="true"
				android:textColor="@color/text_white"
				android:textSize="10sp"
				android:textStyle="bold"
				android:visibility="gone"
			/>

		</RelativeLayout>

		<com.staples.mobile.cfa.widget.PriceSticker
			android:id="@+id/cartitem_price"
			android:layout_below="@id/shipping_and_price_layout"
			style="@style/SmallPriceSticker"
			android:layout_marginBottom="11dp"
			android:padding="0dp"/>

        <ImageView
            android:id="@+id/cartitem_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_below="@id/cartitem_price"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:padding="1dp"
            android:background="@color/background_extra_light_gray"
            android:src="@drawable/ic_close_black_18dp"
            />

        <com.staples.mobile.cfa.widget.QuantityEditor
            android:id="@+id/cartitem_qty"
            style="@style/QtyEditorStyle"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
			android:layout_below="@id/shipping_and_price_layout"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:textSize="14sp"
            android:textColor="@color/text_nearly_black"
            android:maxLength="4"
            app:maxQuantity="10"
            app:popupWidth="120dp"/>

    </RelativeLayout>

    <!--horizontal rule-->
    <View
        android:id="@+id/cart_item_horizontal_rule"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/cartitem_desc_layout"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:background="@color/hr_extra_light_gray"
        android:visibility="gone"/>

</RelativeLayout>

