<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bundle_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fixed_grid_tall_height"
    android:background="@color/staples_white">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:paddingTop="@dimen/verticalspacing_16dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/image_square_size"
            android:layout_height="@dimen/image_square_size"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/title"
            style="@style/SmallProductTitle"
            android:layout_marginTop="@dimen/margin_16dp"/>
        <app.staples.mobile.cfa.widget.PriceSticker
            android:id="@+id/pricing"
            style="@style/SmallPriceSticker"
            android:layout_marginTop="@dimen/verticalspacing_8dp"/>
        <app.staples.mobile.cfa.widget.RatingStars
            android:id="@+id/rating"
            style="@style/SmallRatingStars"
            android:layout_marginTop="@dimen/verticalspacing_4dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/bundle_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:padding="@dimen/action_bar_half_margin"/>
    <ProgressBar
        android:id="@+id/bundle_whirlie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:padding="@dimen/action_bar_half_margin"
        android:visibility="gone"/>
</FrameLayout>