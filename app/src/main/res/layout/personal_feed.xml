<?xml version="1.0" encoding="utf-8"?>
<app.staples.mobile.cfa.widget.AnimatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/staples_off_white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Empty Messages-->
            <LinearLayout
                android:id="@+id/empty_feed_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">
                <!--your feed is empty-->
                <TextView
                    android:id="@+id/empty_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/verticalspacing_48dp"
                    android:textColor="@color/staples_black"
                    android:textSize="@dimen/fontsize_20sp"
                    android:text="@string/feed_empty_message" />
                <!--build your personal feed-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/verticalspacing_24dp"
                    android:textColor="@color/staples_dark_gray"
                    android:textSize="@dimen/fontsize_16sp"
                    android:gravity="center_horizontal"
                    android:text="@string/feed_empty_interact_message"/>
            </LinearLayout>

            <!-- Last Seen Products -->
            <LinearLayout
                android:id="@+id/seen_products_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/staples_white"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/staples_white"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:padding="@dimen/verticalspacing_8dp"
                        android:text="@string/feed_seen_products_title"/>
                    <TextView
                        android:id="@+id/seen_products_clear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"
                        android:padding="@dimen/verticalspacing_8dp"
                        android:text="Clear"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/staples_middle_gray"/>
                <app.staples.mobile.cfa.widget.DataWrapper
                    android:id="@+id/seen_products_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/seen_products_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/verticalspacing_8dp">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/fontsize_20sp"
                            android:text="@string/loading"
                            android:padding="@dimen/verticalspacing_8dp"/>
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <RelativeLayout
                        android:id="@+id/seen_products_loading_footer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:padding="@dimen/verticalspacing_8dp"
                        android:visibility="gone">
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </app.staples.mobile.cfa.widget.DataWrapper>
            </LinearLayout>

            <!-- Separator -->
            <View
                android:id="@+id/seen_products_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/verticalspacing_8dp"/>

            <!-- Daily Deal Products in Cart -->
            <LinearLayout
                android:id="@+id/daily_deal_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/staples_white"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/daily_deal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:padding="@dimen/verticalspacing_8dp"
                    android:text="@string/feed_daily_deal_title"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/staples_middle_gray"/>
                <app.staples.mobile.cfa.widget.DataWrapper
                    android:id="@+id/daily_deal_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/daily_deal_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/verticalspacing_8dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/fontsize_20sp"
                            android:text="@string/loading"
                            android:padding="@dimen/verticalspacing_8dp"/>
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                </app.staples.mobile.cfa.widget.DataWrapper>
            </LinearLayout>

            <!-- Separator -->
            <View
                android:id="@+id/clearance_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/verticalspacing_8dp"/>

            <!-- Clearance Products in Cart -->
            <LinearLayout
                android:id="@+id/clearance_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/staples_white"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/clearance_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:padding="@dimen/verticalspacing_8dp"
                    android:text="@string/feed_clearance_title"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/staples_middle_gray"/>
                <app.staples.mobile.cfa.widget.DataWrapper
                    android:id="@+id/clearance_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/clearance_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/verticalspacing_8dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/fontsize_20sp"
                            android:text="@string/loading"
                            android:padding="@dimen/verticalspacing_8dp"/>
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                </app.staples.mobile.cfa.widget.DataWrapper>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</app.staples.mobile.cfa.widget.AnimatorLayout>
