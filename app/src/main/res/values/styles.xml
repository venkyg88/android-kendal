<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar"/>

    <!-- ActionBar styles -->
    <style name="ActionBarBadgeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/action_bar_quarter_margin</item>
        <item name="android:paddingRight">@dimen/action_bar_quarter_margin</item>
        <item name="android:textSize">@dimen/fontsize_11sp</item>
        <item name="android:textColor">@color/staples_white</item>
        <item name="circleColor">@color/staples_red</item>
        <item name="android:src">@drawable/ic_shopping_cart_black</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="ActionBarButtonStyle" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/action_bar_half_margin</item>
        <item name="android:layout_marginRight">@dimen/action_bar_half_margin</item>
        <item name="android:textSize">@dimen/fontsize_20sp</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="ActionBarIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/action_bar_quarter_margin</item>
        <item name="android:paddingRight">@dimen/action_bar_quarter_margin</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="ActionBarSearchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/action_bar_half_margin</item>
        <item name="android:layout_marginRight">@dimen/action_bar_half_margin</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="ActionBarTextStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/action_bar_half_margin</item>
        <item name="android:layout_marginRight">@dimen/action_bar_half_margin</item>
        <item name="android:textSize">@dimen/fontsize_20sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/staples_black</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PanelStyle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
    <style name="SortOptionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32sp</item>
        <item name="android:paddingLeft">@dimen/radio_padding</item>
        <item name="android:paddingRight">@dimen/action_bar_half_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:button">@drawable/radio_button_white</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/fontsize_14sp</item>
        <item name="android:textColor">@color/staples_white</item>
    </style>

    <style name="DrawerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/action_bar_half_margin</item>
        <item name="android:paddingRight">@dimen/action_bar_half_margin</item>
        <item name="android:textSize">@dimen/fontsize_14sp</item>
        <item name="android:textColor">@color/staples_black</item>
    </style>

    <style name="BrowseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/browse_item_height</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textSize">@dimen/fontsize_20sp</item>
    </style>

    <style name="ProfileStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/verticalspacing_16dp</item>
        <item name="android:textSize">@dimen/fontsize_16sp</item>
        <item name="android:textColor">@color/staples_black</item>
    </style>

    <style name="InputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:gravity">start|bottom</item>
        <item name="android:textSize">@dimen/fontsize_15sp</item>
        <item name="android:textColor">@color/staples_black</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:singleLine">true</item>
        <item name="dualSize">@dimen/fontsize_12sp</item>
        <item name="dualGap">1dp</item>
        <item name="dualColor">@color/staples_dark_gray</item>
    </style>

    <style name="RoundButton">
        <item name="android:layout_width">@dimen/round_button_diameter</item>
        <item name="android:layout_height">@dimen/round_button_diameter</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:layout_marginBottom">@dimen/add_button_margin</item>
        <item name="android:layout_marginRight">@dimen/add_button_margin</item>
    </style>

    <style name="GraySubheading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fontsize_12sp</item>
        <item name="android:textColor">@color/staples_dark_gray</item>
    </style>

    <style name="CheckoutText">
        <item name="android:textSize">@dimen/fontsize_14sp</item>
        <item name="android:textColor">@color/staples_black</item>
    </style>

    <style name="TextExtraLargeListItem">
		<item name="android:textSize">@dimen/fontsize_15sp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">@color/sel_text_list_item</item>
	</style>

    <!-- Sku styling -->
    <style name="SmallProductTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/fontsize_14sp</item>
        <item name="android:textColor">@color/staples_black</item>
    </style>

    <style name="LargePriceSticker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="majorTextSize">@dimen/fontsize_24sp</item>
        <item name="majorTextColor">@color/staples_red</item>
        <item name="minorTextSize">@dimen/fontsize_16sp</item>
        <item name="minorTextColor">@color/staples_dark_gray</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SmallPriceSticker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="majorTextSize">@dimen/fontsize_16sp</item>
        <item name="majorTextColor">@color/staples_red</item>
        <item name="minorTextSize">@dimen/fontsize_12sp</item>
        <item name="minorTextColor">@color/staples_dark_gray</item>
    </style>

    <style name="LargeRatingStars">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fontsize_14sp</item>
        <item name="minorTextColor">@color/staples_dark_gray</item>
    </style>
    <style name="SmallRatingStars">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fontsize_10sp</item>
        <item name="noReviews">@string/stars_no_reviews</item>
        <item name="minorTextColor">@color/staples_dark_gray</item>
    </style>

    <style name="IndicatorBlock">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="cornerRadius">3dp</item>
        <item name="spacingGap">8dp</item>
        <item name="android:textSize">@dimen/fontsize_12sp</item>
        <item name="android:textColor">@color/staples_white</item>
    </style>

    <style name="SkuSummaryHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/sku_padding_35</item>
        <item name="android:textSize">@dimen/fontsize_16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/sku_padding_10</item>
        <item name="android:textColor">@color/staples_dark_gray</item>
    </style>
    <style name="SkuDetailHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fontsize_16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:padding">@dimen/sku_padding_10</item>
        <item name="android:textColor">@color/staples_dark_gray</item>
    </style>

    <style name="SkuBulletMarkerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
        <item name="android:paddingTop">@dimen/verticalspacing_8dp</item>
        <item name="android:paddingLeft">@dimen/sku_padding_10</item>
        <item name="android:paddingRight">@dimen/sku_padding_10</item>
        <item name="android:src">@drawable/bullet</item>
    </style>
    <style name="SkuBulletTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/sku_padding_10</item>
        <item name="android:paddingRight">@dimen/sku_padding_10</item>
        <item name="android:textSize">@dimen/fontsize_16sp</item>
        <item name="android:textColor">@color/staples_black</item>
    </style>

    <style name="SkuDetailTabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/sku_padding_10</item>
        <item name="android:paddingBottom">@dimen/sku_padding_10</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/fontsize_16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/staples_black</item>
        <item name="android:background">@drawable/sku_detail_tab</item>
    </style>

    <!-- Store locator styling -->
    <style name="StoreItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fontsize_16sp</item>
        <item name="android:textColor">@color/staples_black</item>
    </style>

    <style name="QtyEditorStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">1</item>
        <item name="android:maxLength">3</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/staples_black</item>
        <item name="android:textColorHint">@color/staples_black</item>
        <item name="android:drawableRight">@drawable/ic_arrow_drop_down</item>
        <item name="android:background">@drawable/bottom_frame</item>
        <item name="popupWidth">120dp</item>
    </style>

    <style name="OrderButtonStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/staples_white</item>
        <item name="android:textSize">@dimen/fontsize_14sp</item>
    </style>

    <style name="OrderHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fontsize_14sp</item>
        <item name="android:textColor">@color/staples_black</item>
    </style>

    <style name="OrderLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/fontsize_14sp</item>
        <item name="android:textColor">@color/staples_black</item>
        <item name="android:paddingTop">@dimen/verticalspacing_8dp</item>
    </style>

    <style name="OrderValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fontsize_16sp</item>
        <item name="android:textColor">@color/staples_black</item>
    </style>

    <style name="HorizontalDivLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/div_line</item>
        <item name="android:background">@color/staples_dark_gray</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
    </style>

    <style name="ExternalButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">@dimen/fontsize_16sp</item>
        <item name="android:textColor">@color/staples_black</item>
    </style>

</resources>
