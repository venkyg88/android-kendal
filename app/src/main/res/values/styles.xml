<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar"/>

    <!-- ActionBar styles -->
    <style name="ActionBarBadgeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:src">@drawable/ic_shopping_cart_white</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="ActionBarButtonStyle" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="ActionBarIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="ActionBarSearchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="ActionBarTextStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="DrawerStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="BrowseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/browse_item_height</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="InputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:gravity">start|bottom</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#333333</item>
        <item name="textDualSize">12sp</item>
        <item name="textDualGap">1dp</item>
        <item name="textDualColor">#ff0000ff</item>
    </style>

    <style name="CartHeader" parent="DrawerStyle">
        <item name="android:background">#ffff00</item>
    </style>

    <style name="GraySubheading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="CheckoutFooter">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <!--setting padding individually so that individual values can be overriden -->
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="CheckoutText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_nearly_black</item>
    </style>

    <style name="TextExtraLargeListItem">
		<item name="android:textSize">15sp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">@color/sel_text_list_item</item>
	</style>

    <!-- Sku styling -->

    <style name="PagerStripe">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="stripeThickness">3dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SkuSummaryTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SkuNumbers">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallProductTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff333333</item>
    </style>

    <style name="LargePriceSticker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="majorTextSize">32sp</item>
        <item name="majorTextColor">@color/staples_light</item>
        <item name="minorTextSize">24sp</item>
        <item name="minorTextColor">#ff8a8a8a</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SmallPriceSticker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="majorTextSize">14sp</item>
        <item name="majorTextColor">@color/staples_light</item>
        <item name="minorTextSize">12sp</item>
        <item name="minorTextColor">#ff8a8a8a</item>
    </style>

    <style name="LargeRatingStars">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="noReviews">@string/no_reviews</item>
    </style>
    <style name="SmallRatingStars">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SkuSummaryHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SkuBulletMarkerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:src">@drawable/bullet</item>
    </style>
    <style name="SkuBulletTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SkuSpecStyle">
        <item name="android:textSize">16dp</item>
    </style>
    <style name="SkuSpecNameStyle" parent="SkuSpecStyle">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>
    <style name="SkuSpecValueStyle" parent="SkuSpecStyle">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="SkuSpecFont">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="SkuReviewTitle">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Store locator styling -->
    <style name="StoreItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="QtyEditorStyle">
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">#ff000000</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
